<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ValidaSenhaActivity">

    <ImageButton
        android:id="@+id/imageBtnComeBackSenha"
        android:layout_width="52dp"
        android:layout_height="57dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_outline_close_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="validação de senha"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="informe o código recebido para validação"
        android:textColor="@color/darkGrey"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="68dp"
        android:layout_height="81dp"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_marginTop="40dp"
        android:maxLength="1"
        android:inputType="number"
        android:gravity="center"
        android:maxLines="1"
        android:background="@drawable/background_edit_text_validacao"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:text="0" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="68dp"
        android:layout_height="81dp"
        android:layout_row="0"
        android:layout_column="1"
        android:inputType="number"
        android:maxLines="1"
        android:maxLength="1"
        android:background="@drawable/background_edit_text_validacao"
        android:gravity="center"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@+id/editText3"
        app:layout_constraintStart_toEndOf="@+id/editText1"
        app:layout_constraintTop_toTopOf="@+id/editText1"
        tools:text="0" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="68dp"
        android:layout_height="81dp"
        android:layout_row="0"
        android:layout_column="0"
        android:inputType="number"
        android:maxLines="1"
        android:maxLength="1"
        android:background="@drawable/background_edit_text_validacao"
        android:gravity="center"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/editText2"
        tools:text="0" />

    <Button
        android:id="@+id/btnValidarSenha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="80dp"
        android:text="validar"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/ic_background_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


