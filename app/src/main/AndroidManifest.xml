<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.bancofake">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_banco_fake"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:replace="android:allowBackup,android:icon,android:theme"
        tools:targetApi="31">

        <activity
            android:name=".ui.activity.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activity.dados_pessoais.DadosPessoaisActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.pix_valor.PixValorActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.pix.PixActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.alteracao_senha.AlteracaoSenhaActivity"
            android:exported="false" />
        <activity
            android:name="com.example.bancofake.ui.activity.home.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activity.cadastro.CadastroActivity"
            android:exported="false" />
    </application>

</manifest>